{
  "name": "conWhatsapp",
  "version": "1.0.6",
  "description": "whatsapp wrapper for linux",
  "repository": {
    "url": "https://github.com/schrodit/conWhatsapp"
  },
  "homepage": "https://github.com/schrodit/conWhatsapp",
  "main": "app/main.js",
  "keywords": [
    "electron",
    "whatsapp"
  ],
  "author": {
    "name": "Tim Schrodi",
    "email": "tschrodi96@gmail.com"
  },
  "license": "MIT",
  "scripts": {
    "build": "bower install",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "build": {
    "appId": "cf.convey.conWhatsapp",
    "files": [
      "app/**/*",
      "build/icon.*"
    ],
    "linux": {
      "target": [
        {
          "target": "tar.gz"
        },
        {
          "target": "pacman"
        },
        {
          "target": "deb"
        }
      ],
      "category": "InstantMessaging",
      "icon": "app/icon.png",
      "executableName": "conWhatsapp"
    }
  },
  "devDependencies": {
    "electron": "1.8.2",
    "electron-builder": "17.0.1",
    "gulp": "3.9.1",
    "gulp-bump": "2.7.0",
    "gulp-eslint": "3.0.1",
    "gulp-git": "^2.5.2",
    "gulp-if": "2.0.2",
    "run-sequence": "1.2.2"
  },
  "dependencies": {}
}
